package  {		import flash.display.MovieClip;	import flash.display.DisplayObject;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.media.Sound;	import flash.media.SoundChannel;		public class metaTools extends MovieClip {		var clkU:Sound = new clickUp();		var clkD:Sound = new clickDown();		var sc:SoundChannel = new SoundChannel();		public function metaTools() {			// constructor code			addEventListener(Event.ADDED_TO_STAGE, init);		}				private function init(e:Event):void{			for (var i = 0; i<this.numChildren; i++){				var child:* = this.getChildAt(i);				if (child is MovieClip) child.mouseChildren = false  ;			}			addEventListener(MouseEvent.MOUSE_UP, toolClicked);			addEventListener(MouseEvent.MOUSE_DOWN, toolDown);		}				private function toolDown(m:Event):void{			sc = clkD.play();		}				private function toolClicked(m:Event):void{			var t:MovieClip = m.target as MovieClip;			var evString:String = (t is finish ) ? ToolEvent.DONE : (t is cam) ? ToolEvent.SNAP_PIC : (t is undo)  ? ToolEvent.UNDO : null ;			if(evString != null ) dispatchEvent(new ToolEvent(evString));			sc = clkU.play();		}	}	}