package  {	import flash.display.MovieClip;	import com.greensock.TweenLite;	import flash.events.MouseEvent;	public class baseTool extends MovieClip {				private var tweenTime:Number = 0.3;		public function baseTool() {			// constructor code			this.stop();			this.addEventListener(MouseEvent.MOUSE_DOWN, buttonDown);		}				public function set isActive(b:Boolean):void{			var tg:Number = (b) ? 1 : 0.5;			TweenLite.to(this,tweenTime,{alpha:tg, colorMatrixFilter:{saturation:Number(b)}});			this.mouseEnabled = this.mouseChildren = b;		}				private function buttonDown(m:MouseEvent):void{			this.removeEventListener(MouseEvent.MOUSE_DOWN, buttonDown);			this.addEventListener(MouseEvent.MOUSE_UP, buttonUp);			this.gotoAndStop(2);					}				private function buttonUp(m:MouseEvent):void{			this.removeEventListener(MouseEvent.MOUSE_UP, buttonUp);			this.addEventListener(MouseEvent.MOUSE_DOWN, buttonDown);			this.gotoAndStop(1);		}			}	}